@{
    ViewData["Title"] = "Course Details";
}
<h1>@ViewData["Title"]</h1>
<main>
    <section id="course-details">
        <div class="course-image">
            <img src="@Url.Content(Model.PhotoURL)" alt="Course">
        </div>
        <div class="course-infoTwo">
            <h1>@Model.Titre</h1>
            <p>Level : @Model.Niveau?.Nom</p>
            <p>Language : @Model.Langue?.Nom</p>
            <p class="description">
                @Model.Description
            </p>
            <h2>Objectives</h2>
            <p>@Model.Objectives</p>
            <p>Features : @Model.Features?.Nom</p>

        </div>
    </section>
</main>